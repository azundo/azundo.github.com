function getPathPoints(treePositions, flagPositions, grave) {
  // create two lines, grave -> tree -> flag -> grave for each tree
  return [
    [
      grave,
      treePositions[0],
      flagPositions[0],
      grave
    ],
    [
      grave,
      treePositions[1],
      flagPositions[1],
